{
    "name": "newgrf-meta-language",
    "publisher": "tony-pixel",
    "displayName": "NewGRF Meta Language (TEST)",
    "author": "Tony Pixel",
    "version": "0.0.3",
    "main": "client.js",
    "scripts": {
        "node-watch": "node esbuild.js --watch",
        "node-publish": "node esbuild.js --production",
        "build": "node esbuild.js && dotnet build ./src/server",
        "dotnet-publish": "dotnet publish ./src/server --configuration Release --sc true --output \".\""
    },
    "private": "true",
    "keywords": [],
    "description": "NewGRF Meta Language for VSCode",
    "license": "GPL-3.0-only",
    "repository": {
        "url": "https://github.com/Pixel-Tony/nml-ext"
    },
    "engines": {
        "vscode": "^1.75.1"
    },
    "files": [
        "client.js",
        "LICENSE.md",
        "README.md",
        "grammar",
        "NMLServer*"
    ],
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.3.3",
        "@types/vscode": "^1.75.1",
        "@vscode/vsce": "^3.6.0",
        "esbuild": "^0.25.8",
        "typescript": "^5.1.3"
    },
    "contributes": {
        "configurationDefaults": {
            "[nml]": {
                "editor.semanticHighlighting.enabled": true
            }
        },
        "languages": [
            {
                "id": "nml",
                "aliases": [
                    "NML"
                ],
                "extensions": [
                    "nml",
                    "pnml"
                ],
                "configuration": "grammar/language-configuration.json"
            }
        ]
    }
}